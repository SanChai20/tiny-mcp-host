{
  "publisher": "sanchaii",
  "name": "devlinker-mcp-host",
  "displayName": "DevLinker - MCP Host",
  "description": "%ext.desc%",
  "version": "0.2.9",
  "pricing": "Free",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "chat-participant",
    "copilot",
    "copilot-mcp",
    "mcp",
    "ai"
  ],
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "chatParticipants": [
      {
        "id": "mcp.devlinker",
        "fullName": "Dev Linker",
        "name": "devlinker",
        "description": "%devlinker.desc%",
        "isSticky": true,
        "commands": [
          {
            "name": "connectRemote",
            "description": "%chat.cmd1.desc%"
          },
          {
            "name": "connectLocal",
            "description": "%chat.cmd2.desc%"
          },
          {
            "name": "disconnect",
            "description": "%chat.cmd3.desc%"
          },
          {
            "name": "disconnectAll",
            "description": "%chat.cmd4.desc%"
          },
          {
            "name": "load",
            "description": "%chat.cmd5.desc%"
          },
          {
            "name": "refresh",
            "description": "%chat.cmd6.desc%"
          },
          {
            "name": "autoContext",
            "description": "%chat.cmd7.desc%"
          }
        ]
      }
    ],
    "languageModelTools": [
      {
        "name": "devlinker-mcp_resources_finder",
        "tags": [
          "devlinker",
          "mcp",
          "resources",
          "server",
          "mcp server"
        ],
        "toolReferenceName": "resourcesFinder",
        "displayName": "Resources Finder",
        "modelDescription": "A tool for indirectly obtaining MCP resources. Before invoking other tools, it is recommended that you check whether there are any required MCP resources. You can find the resource URIs in your references.",
        "icon": "$(references)",
        "inputSchema": {
            "type": "object",
            "properties": {
                "resourceUrl": {
                    "type": "string",
                    "description": "URI for the resource (e.g. 'file:///home/user/documents/report.pdf' or 'postgres://database/customers/schema')",
                    "default": ""
                }
            },
            "required": [
              "resourceUrl"
            ]
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ailinker.showOutput",
          "when": "false"
        }
      ]
    },
    "commands": [
      {
        "command": "ailinker.showOutput",
        "title": "%ailinker.output%"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "npm install && npx tsc -p ./"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^20.11.24",
    "@types/vscode": "^1.65.0",
    "@types/ws": "^8.18.0",
    "@vscode/l10n-dev": "^0.0.18",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.13.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.26.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@vscode/chat-extension-utils": "^0.0.0-alpha.5",
    "@vscode/l10n": "^0.0.10",
    "spawn-rx": "^5.1.2"
  }
}
